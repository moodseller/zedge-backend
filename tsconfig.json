{
	"compilerOptions": {
		"allowJs": true,
		"importHelpers": true,
		"strict": true,
		"pretty": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"strictFunctionTypes": false,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./build/",
		"target": "es2017",
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018.promise",
			"dom"
		],
	},
	"exclude": [
		"node_modules",
		"build",
		"bin"
	]
}
